<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniPump" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/</item>

    </style>

    <style name="BACKGROUND">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnBackground">#B31010</item>

        <item name="android:background">@color/black</item>
    </style>

    <style name="BACKGROUNDTINT">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/gray_line</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXTCOLORSECONDARY">
        <item name="android:textColor">@color/gray_line</item>
    </style>

    <style name="TEXTCOLORLINK">
        <item name="android:textColor">@color/azul_link</item>
    </style>

    <style name="TEXTCOLORBLUE">
        <item name="android:textColor">#425FFD</item>
    </style>

    <style name="CARDBACKGROUND">
        <item name="cardBackgroundColor">@color/field_background</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@color/field_background</item>
    </style>

    <style name="CONTEINERBACKGROUND">
        <item name="android:backgroundTint">@color/dark_gray2</item>
        <item name="android:calendarTextColor">@color/white</item>

        <item name="android:background">@color/dark_gray2</item>
    </style>

    <style name="TEXTBOX">
        <item name="android:backgroundTint">@color/field_background</item>

        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="BOTAO">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="BOTAOBACK">
        <item name="backgroundTint">@color/invisivel</item>
    </style>

    <style name="ICON">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:background">@color/invisivel</item>
    </style>

</resources>
