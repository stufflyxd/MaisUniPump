<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    style="@style/BACKGROUNDTINT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de não lida -->
        <View
            android:id="@+id/indicadorLida"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_indicator"
            android:backgroundTint="@color/primary_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Trainer"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXTCOLOR" />

            <TextView
                android:id="@+id/textMensagemOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ref: Solicitação de nova ficha"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textMensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Digite algo..."
                android:textSize="14sp"
                style="@style/TEXTCOLORSECONDARY"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/textDataHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="01/01/2024 10:30"
                android:textSize="12sp"
                style="@style/TEXTCOLORSECONDARY" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>