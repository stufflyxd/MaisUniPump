<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    style="@style/CONTEINERBACKGROUND"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar Nova Ficha"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/TEXTCOLORBLUE"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja realmente solicitar uma nova ficha de treino? Esta solicitação será enviada para análise do profissional responsável."
        android:textSize="16sp"
        style="@style/TEXTCOLOR"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            style="@style/TEXTCOLOR"
            android:background="@drawable/funda_cinza_rounded"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Solicitar"
            style="@style/TEXTCOLORBLUE"
            android:background="@drawable/fundo_preto_rounded"
            android:backgroundTint="@color/black"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>