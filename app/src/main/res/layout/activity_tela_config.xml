<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Seção de perfil -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagem de perfil -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/blue"
            android:contentDescription="@string/perfil_usuario"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"/>

        <!-- Nome do usuário -->
        <TextView
            android:id="@+id/perfil_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Nome Usuário"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Itens do menu -->
    <LinearLayout
        android:id="@+id/menu_options"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/personal_info"
            style="@style/SettingsItem"
            android:text="Informações pessoais" />

        <TextView
            android:id="@+id/preferences"
            style="@style/SettingsItem"
            android:text="Preferências" />

        <TextView
            android:id="@+id/training_data"
            style="@style/SettingsItem"
            android:text="Dados para treino" />

        <TextView
            android:id="@+id/support"
            style="@style/SettingsItem"
            android:text="Suporte" />

        <TextView
            android:id="@+id/deslogar"
            style="@style/SettingsItem"
            android:text="Deslogar"
            android:textColor="@color/red" />
    </LinearLayout>

    <!-- Bottom Navigation View com nomes visíveis -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
